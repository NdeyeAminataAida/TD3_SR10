<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>
            <%= title %>
    </h1>
        <div class="mt-4 bg-white p-3 rounded shadow">
                <table class="table">
                    <thead>
                            <tr>
                            <th>num_offre</th>
                            <th>email_candidat</th>
                            <th>date</th>
                            </tr>
                    </thead>
                    <tbody>
                            <% candidatures.forEach((candidature)=> { %>
                            <tr>
                            <td>
                            <%= candidature.num_offre %>
                            </td>
                            <td>
                            <%= candidature.email_candidat %>
                            </td>
                            <td>
                            <%= new Date(candidature.date).toLocaleDateString('fr-FR') %>
                            </td>
                            </tr>
                            <% }) %>
                        </tbody>
               </table>
          </div>
  </body>
