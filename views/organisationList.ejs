<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel='stylesheet' href='/stylesheets/style.css' />
<body>
<h1 class="text-primary"><%= title %></h1>

<table class="table">
    <thead>
    <tr>
        <th>id_siren</th>
        <th>nom</th>
        <th>type</th>
    </tr>
    </thead>
    <tbody>
    <% organisation.forEach((organisation) => { %>
    <tr>
        <td><%= organisation.id_siren %></td>
        <td><%= organisation.nom %></td>
        <td>
            <% 
                let typeClass = {
                    'Société Nationale': 'societe-nationale',
                    'ESN': 'esn',
                    'Grande Entreprise': 'grande-entreprise',
                    'SARL': 'sarl',
                    'SCOP': 'scop',
                    'EURL': 'eurl',
                    'SASU': 'sasu'
                }[organisation.type] || '';
            %>
            <span class="<%= typeClass %> p-1 rounded"><%= organisation.type %></span>
        </td>
    </tr>
    <% }) %>
    </tbody>
</table>
</body>
