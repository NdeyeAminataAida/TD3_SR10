<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel='stylesheet' href='/stylesheets/style.css' />
        <body>
    <h1>
        <h1 class="text-primary"><%= title %></h1>
    </h1>
    <table class="table">
        <thead>
          <tr>
            <th>numéro</th>
            <th>état</th>
            <th>mailRecrut</th>
          </tr>
        </thead>
        <tbody>
          <% offres.forEach(offre => { %>
            <tr>
              <!-- Numéro avec couleur bleue -->
              <td class="blue-column"><%= offre.numéro %></td>
      
              <!-- État avec couleur -->
              <td class="blue-column">
                <% if (offre.etat === 'publiée') { %>
                  <span class="etat valide"><%= offre.etat %></span>
                <% } else if (offre.etat === 'non publiée') { %>
                  <span class="etat a-traiter"><%= offre.etat %></span>
                <% } else if (offre.etat === 'en cours d’édition') { %>
                  <span class="etat a-traiter"><%= offre.etat %></span>
                <% } else { %>
                  <span class="etat"><%= offre.etat %></span>
                <% } %>
              </td>
      
              <!-- Date de validité avec couleur bleue -->
              <td class="blue-column"><%= offre.mailRecrut%></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
      
</body>